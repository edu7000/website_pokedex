<div class="container-fluid" id="pokemon">

	<div class="row">
        <% if(data) {
                       var img="";
                       img=data.id.toString();
                       img=img.padStart(3,'0')
                       
                    %>
		<div class="col-md-6 div.item-poketview"  >
        
            <figure class="imgpoket">
                <a href="javascript:;">
                <img src="/img/images/<%- img %>.png" alt=""  >
            </a>
            </figure>
    
    </div>
    
    <div class="col-md-6 div.item-poketview" >
