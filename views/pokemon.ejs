        <input type="range" name="price" id="price" min="0" max="150" step="1" value="<%= data.base.HP %>">
        <output class="price-output" for="price"><%= data.base.HP %></output>
       </td>
    </tr>
    <tr>
    <td><label for="price">Ataque: </label></td>
    <td>
    <input type="range" name="price" id="price" min="0" max="150" step="1" value="<%= data.base.Attack %>">
    <output class="price-output" for="price"><%= data.base.Attack %></output>
   </td>
    </tr>
    <tr>
        <td><label for="price">Defensa: </label></td>
        <td>
        <input type="range" name="price" id="price" min="0" max="150" step="1" value="<%= data.base.Defense %>">
        <output class="price-output" for="price"><%= data.base.Defense %></output>
       </td>
    </tr>
    <tr>
        <td><label for="price">Ataque Especial: </label></td>
        <td>
        <input type="range" name="price" id="price" min="0" max="150" step="1" value="<%= data.base.SpAttack %>">
        <output class="price-output" for="price"><%= data.base.SpAttack %></output>
       </td>
    </tr>
        <tr>
            <td><label for="price">Defensa Especial: </label></td>
            <td>
            <input type="range" name="price" id="price" min="0" max="150" step="1" value="<%= data.base.SpDefense %>">
            <output class="price-output" for="price"><%= data.base.SpDefense %></output>
           </td>
            </tr>
            <tr>
                <td><label for="price">Velocidad: </label></td>
                <td>
                <input type="range" name="price" id="price" min="0" max="150" step="1" value="<%= data.base.Speed %>">
                <output class="price-output" for="price"><%= data.base.Speed %></output>
               </td>
                </tr>
</table>
<p>
<div class="tipo cdrtip" >
    <% if(data.type.length > 0) { %>
        <% for(let tipo of data.type) { %>
    <span class="background-color-grass"><%= tipo %></span>
    <% }
     } %>
</div>  
</p>    
    </p>
    
</div>

    <% } else { %>
        <div>No data found</div>
    <% }
